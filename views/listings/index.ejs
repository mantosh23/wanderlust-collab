<% layout("/layouts/boilerplate") %>

<style>
  .scroll-container-wrapper {
    position: relative;
  }

  .scroll-container {
    display: flex;
    flex-wrap: nowrap;
    overflow-x: auto;
    gap: 1rem;
    scroll-behavior: smooth;
    padding: 1rem;
  }

  .scroll-container::-webkit-scrollbar {
    display: none;
  }

  .scroll-container {
    -ms-overflow-style: none; /* IE/Edge */
    scrollbar-width: none; /* Firefox */
  }

  .category-icon {
    min-width: 100px;
    flex: 0 0 auto;
    text-align: center;
    transition: transform 0.3s ease;
    cursor: pointer;
  }

  .category-icon:hover .icon-box {
    color: #0d6efd;
    transform: scale(1.2);
  }

  .icon-box {
    color: #343a40;
    transition: transform 0.3s, color 0.3s;
  }
  /* Mobile (up to 575px) */
  @media (max-width: 575.98px) {
    .scroll-container {
      padding: 0.5rem;
      gap: 0.5rem;
    }

    .category-icon {
      min-width: 80px;
      font-size: 0.8rem;
    }

    .category-icon i {
      font-size: 1.2rem;
    }

    .card-img-top {
      height: 12rem !important;
    }

    .card-body {
      padding: 0.5rem;
    }

    .card-text {
      font-size: 0.85rem;
    }

    .row-cols-sm-2 > * {
      flex: 0 0 100%;
      max-width: 100%;
    }
  }

  /* Tablet (576px to 767px) */
  @media (min-width: 576px) and (max-width: 767.98px) {
    .card-img-top {
      height: 15rem !important;
    }

    .row-cols-sm-2 > * {
      flex: 0 0 50%;
      max-width: 50%;
    }
  }

  /* Small desktops (768px to 991px) */
  @media (min-width: 768px) and (max-width: 991.98px) {
    .card-img-top {
      height: 18rem !important;
    }

    .row-cols-md-3 > * {
      flex: 0 0 33.3333%;
      max-width: 33.3333%;
    }
  }

  /* Large desktops (992px and above) */
  @media (min-width: 992px) {
    .card-img-top {
      height: 20rem !important;
    }

    .row-cols-lg-3 > * {
      flex: 0 0 33.3333%;
      max-width: 33.3333%;
    }
  }
</style>

