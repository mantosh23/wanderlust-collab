<% layout("/layouts/boilerplate") %>
<body>
  <div class="row justify-content-center">
    <div class="col-11 col-sm-10 col-md-8 col-lg-6 mt-3 md-5">
      <h3>Edit Listings</h3>
      <form
        action="/listing/edit/<%= details._id %>?_method=PUT"
        method="post"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            name="title"
            type="text"
            value="<%= details.title %>"
            class="form-control"
            required
          />
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="description"
            rows="4"
            class="form-control"
            required
          ><%= details.description %></textarea>
          <div class="invalid-feedback">Please enter a short description</div>
        </div>

        <div class="mb-3">
          <label for="category" class="form-label">Select Hotel Category</label>
          <select
            class="form-select"
            id="category"
            name="category"
            required
          >
            <option value="" disabled>Select a category</option>
            <option value="budget" <%= details.category === "budget" ? "selected" : "" %>>Budget</option>
            <option value="standard" <%= details.category === "standard" ? "selected" : "" %>>Standard</option>
            <option value="deluxe" <%= details.category === "deluxe" ? "selected" : "" %>>Deluxe</option>
            <option value="luxury" <%= details.category === "luxury" ? "selected" : "" %>>Luxury</option>
            <option value="boutique" <%= details.category === "boutique" ? "selected" : "" %>>Boutique</option>
            <option value="resort" <%= details.category === "resort" ? "selected" : "" %>>Resort</option>
            <option value="business" <%= details.category === "business" ? "selected" : "" %>>Business</option>
            <option value="heritage" <%= details.category === "heritage" ? "selected" : "" %>>Heritage</option>
            <option value="homestay" <%= details.category === "homestay" ? "selected" : "" %>>Homestay</option>
            <option value="hostel" <%= details.category === "hostel" ? "selected" : "" %>>Hostel</option>
            <option value="eco-friendly" <%= details.category === "eco-friendly" ? "selected" : "" %>>Eco-Friendly</option>
            <option value="airport hotel" <%= details.category === "airport hotel" ? "selected" : "" %>>Airport Hotel</option>
            <option value="bed & breakfast" <%= details.category === "bed & breakfast" ? "selected" : "" %>>Bed & Breakfast</option>
            <option value="serviced apartment" <%= details.category === "serviced apartment" ? "selected" : "" %>>Serviced Apartment</option>
            <option value="capsule hotel" <%= details.category === "capsule hotel" ? "selected" : "" %>>Capsule Hotel</option>
            <option value="treehouse" <%= details.category === "treehouse" ? "selected" : "" %>>Treehouse</option>
            <option value="villa" <%= details.category === "villa" ? "selected" : "" %>>Villa</option>
            <option value="motel" <%= details.category === "motel" ? "selected" : "" %>>Motel</option>
            <option value="palace hotel" <%= details.category === "palace hotel" ? "selected" : "" %>>Palace Hotel</option>
            <option value="wellness retreat" <%= details.category === "wellness retreat" ? "selected" : "" %>>Wellness Retreat</option>
          </select>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Upload Image</label>
          <input name="image" type="file" class="form-control" />
        </div>

        <div class="row">
          <div class="mb-3 col-12 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              name="price"
              type="number"
              value="<%= details.price %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price should be valid</div>
          </div>
          <div class="mb-3 col-12 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              name="country"
              type="text"
              value="<%= details.country %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Country Name should be valid</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            name="location"
            type="text"
            value="<%= details.location %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location should be valid</div>
        </div>

        <button class="btn edit-btn mb-5" type="submit">Edit</button>
      </form>
    </div>
  </div>
</body>
